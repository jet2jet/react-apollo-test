{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "paths": {
      "*": [
        "../node_modules/@types/*",
        "../node_modules/*"
      ]
    },
    "typeRoots": [
      "../node_modules/@types/*"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
